%br/
- if flash[:errors] && flash[:errors]["#{addr}.#{attr_sym}"]
  .has-error
    = render partial: 'address_field', 
      locals: {f: f, attrs: attrs, attr_sym: attr_sym}
    %span.help-block
      = "#{flash[:errors]["#{addr}.#{attr_sym}"].uniq.join(', ')}"
- else
  %div
    = render partial: 'address_field', 
      locals: {f: f, attrs: attrs, attr_sym: attr_sym}