- @attrs = flash['attrs']

- [:firstname, 
   :lastname, 
   :number, 
   :expiration_month, 
   :expiration_year, 
   :cvv].each do |item|
  .field
    = render partial: 'credit_card_fields', 
      locals: {f: f, attrs: @attrs, attr_sym: item}

.field
  = f.hidden_field :customer_id, value: current_customer.id

